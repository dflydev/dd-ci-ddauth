<packages xmlns="http://dd-p2.dflydev.com/2010">
    <package>
        <version>0.1.1</version>
        <name>Dragonfly Development CodeIgniter Auth Add-on</name>
        <url>http://github.com/dflydev/dd-ci-ddauth</url>
        <copyright>Copyright (c) 2010 Dragonfly Development</copyright>
        <license>Licensed under the New BSD License.</license>
        <files>
            <file name="README" />
            <file name="LICENSE.txt" />
            <glob name="configs" pattern="application/config/*.php" />
            <glob name="libraries" pattern="application/libraries/*.php" />
        </files>
        <outputs>
            <output name="dd-ci-ddauth">
                <includeFile name="README" />
                <includeFile name="LICENSE.txt" />
                <includeGlob name="configs" />
                <includeGlob name="libraries" />
            </output>
        </outputs>
    </package>
</packages>
